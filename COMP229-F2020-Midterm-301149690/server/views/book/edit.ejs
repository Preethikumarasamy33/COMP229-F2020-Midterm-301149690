<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6"></div>

        <form class ="form" method="POST">
            <div class="form-group">
                <label for="nameTextfield">Book Title</label>
                <input type="text"class="form-group"
                id="nameTextfield"
                placeholder="Enter the Book Title" value= <%= BookToEdit.name %>
                name="name" required>
            </div>

            <div class="form-group">
                <label for="authorTextfield">Author</label>
                <input type="text"class="form-group"
                id="authorTextfield"
                placeholder="Enter the Book's Author" value= <%= BookToEdit.author %>
                name="author" required> 
            </div>
            <div class="form-group">
                <label for="publishedTextfield">Year Published</label>
                <input type="text"class="form-group"
                id="publishedTextfield"
                placeholder="Enter the Year Published" value= <%= BookToEdit.published %>
                name="published" required> 
            </div>
            <div class="form-group">
                <label for="descriptionTextfield">Description</label>
                <textarea type="text"class="form-group"
                id="descriptionTextfield"
                placeholder="Enter the brief description of the book" 
                name="description" required> <%= BookToEdit.description %> </textarea>
            </div>
            <div class="form-group">
                <label for="priceTextfield">Price</label>
                <input type="number"class="form-group"
                id="priceTextfield"
                placeholder="Enter the Book's Price" value= <%= BookToEdit.price %>
                name="price" required>
            </div>

            <button class="btn btn-primary">
                <i class="fas fa-edit"></i> Submit</button>
            <a href="/book-list" class="btn btn-warning">
                <i class="fas fa-undo"></i> Cancel</a>
    </form>
    </div>
</div>


<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>